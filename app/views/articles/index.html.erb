<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Articles</h1>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <tr>
         <div class="title"> <td><%= article.title %> </td></div>
          <td><%= link_to 'Show', article, class: "btn btn-warning" %></td>
          <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-info"%></td>
          <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Article', new_article_path %>
</div>
